function TPasRISCV.TPS2KeyboardDevice.Command(const aCmd:TPasRISCVUInt8):Boolean;
begin
 case aCmd of
  CMD_RESET:begin
   ResetToDefaults;
   RingBufferWrite(RSP_ACK);
   RingBufferWrite($aa);
   result:=true;
  end;
  CMD_RESEND:begin
   result:=false;
  end;
  CMD_SET_DEFAULTS:begin
   ResetToDefaults;
   RingBufferWrite(RSP_ACK);
   result:=true;
  end;
  CMD_DISABLE_DATA_REPORTING:begin
   fReporting:=false;
   ResetToDefaults;
   RingBufferWrite(RSP_ACK);
   result:=true;
  end;
  CMD_ENABLE_DATA_REPORTING:begin
   fReporting:=true;
   RingBufferWrite(RSP_ACK);
   result:=true;
  end;
  CMD_SET_SAMPLE_RATE:begin
   fState:=STATE_SET_SAMPLE_RATE;
   RingBufferWrite(RSP_ACK);
   result:=true;
  end;
  CMD_GET_DEV_ID:begin
   RingBufferWrite(RSP_ACK);
   RingBufferWrite($ab);
   RingBufferWrite($83);
   result:=true;
  end;
  CMD_SET_SCAN_CODE_SET:begin
   fState:=STATE_SET_SCAN_CODE_SET;
   RingBufferWrite(RSP_ACK);
   result:=true;
  end;
  CMD_ECHO:begin
   RingBufferWrite($ee);
   result:=true;
  end;
  CMD_LEDS:begin
   fState:=STATE_SET_LEDS;
   RingBufferWrite(RSP_ACK);
   result:=true;
  end;
  else begin
   RingBufferWrite(RSP_NAK);
   result:=true;
