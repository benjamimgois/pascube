  if fBusDevices[Index]=aBusDevice then begin
   if (Index+1)<fCountBusDevices then begin
    fBusDevices[Index]:=fBusDevices[fCountBusDevices-1];
    fBusDevices[fCountBusDevices-1]:=nil;
   end else begin
    fBusDevices[Index]:=nil;
