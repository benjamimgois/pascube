           ConsumeDescriptor(aQueueIndex,aDescriptorIndex,Size) and
           UsedRingSync(aQueueIndex)) then begin
    NotifyDeviceNeedsReset;
   end;
  finally
   FreeMem(Buffer);
  end;
 end;
end;

