     DigitValue:=DigitValue-TPasRISCVUInt8(TPasRISCVRawByteChar('A'))+10;
    end;
    else begin
     break;
    end;
   end;
   Value:=(Value*Base)+DigitValue;
   inc(Size);
   inc(aIndex);
  end;
  aLen:=Size;
  result:=Value;
 end else begin
  aLen:=0;
  result:=0;
 end;
end;

