 result:=fBus.fMemAddr;
 repeat
  TemporaryAddress:=fBus.fMachine.fBus.GetAutoMemoryAddress(result,AlignSize);
  if result=TemporaryAddress then begin
   break;
  end else begin
   result:=TemporaryAddress+((AlignSize-TemporaryAddress) and (AlignSize-1));
  end;
 until false;
end;

