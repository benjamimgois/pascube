 if aBase=0 then begin
  Base:=10;
  if (aIndex<=length(aStr)) and (aStr[aIndex]=TPasRISCVRawByteChar('0')) then begin
   Base:=8;
   if (aIndex+1)<=length(aStr) then begin
    case aStr[aIndex+1] of
     'o','O':begin
