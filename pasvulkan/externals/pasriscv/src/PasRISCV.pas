       SetException(TExceptionValue.LoadAddressMisaligned,aAddress,fState.PC);
      end else begin
       SetException(TExceptionValue.StoreAddressMisaligned,aAddress,fState.PC);
      end;
     end;
    end;
   end;
  end;
 end else begin
  if aReadOnly then begin
   SetException(TExceptionValue.LoadAddressMisaligned,aAddress,fState.PC);
  end else begin
   SetException(TExceptionValue.StoreAddressMisaligned,aAddress,fState.PC);
  end;
