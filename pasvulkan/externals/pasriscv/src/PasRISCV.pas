 fUnalignedAccessSupport:=false;
 fMinOpSize:=4;
 fMaxOpSize:=4;
 fAllocationIRQCounter:=0;
 fCountContexts:=fMachine.fCountHARTs shl 1;
 Reset;
end;

destructor TPasRISCV.TPLICDevice.Destroy;
begin
 inherited Destroy;
end;

