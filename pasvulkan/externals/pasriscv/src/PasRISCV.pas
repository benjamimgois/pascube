begin
 Address:=aAddress-fBase;
 case Address of
  REG_DATA:begin
   Value:=aValue and $ff;
   Available:=Write(@Value,1);
   if Available=0 then begin
    TPasMPInterlocked.BitwiseOr(fControl,CTRL_CE);
   end;
