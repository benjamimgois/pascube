      Base:=8;
     end;
     'x','X':begin
      inc(aIndex);
      Base:=16;
     end;
     'b','B':begin
      inc(aIndex);
      Base:=2;
     end;
    end;
   end;
  end;
 end else begin
  Base:=aBase;
