 fLock.Acquire;
 try
  if fActive then begin
   fX:=aX;
   fY:=aY;
   if (fMode=MODE_STREAM) and fReporting then begin
    MovePacket;
   end;
  end;
 finally
  fLock.Release;
 end;
end;

